<Window x:Class="Hawkeye.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hawkeye.WPF"
        xmlns:controls="clr-namespace:Hawkeye.WPF.Controls"
        xmlns:vm="clr-namespace:Hawkeye.WPF.ViewModels"
        mc:Ignorable="d" 
        Title="Hawkeye"
        Height="450"  Width="700"
        MinHeight="350" MinWidth="450"
        Icon="D:\2 course\2 sem\ООП\курсач\Hawkeye\Hawkeye.WPF\Resuorces\LightThemeLogo.png">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <controls:HeaderBar Grid.Row="0"/>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="100" MaxWidth="200"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <controls:NavigationBar Grid.Column="0" DataContext="{Binding Navigator}"/>
            <ContentControl Grid.Column="1" Content="{Binding Navigator.CurrentViewModel}" />
            
        </Grid>

    </Grid>
</Window>
