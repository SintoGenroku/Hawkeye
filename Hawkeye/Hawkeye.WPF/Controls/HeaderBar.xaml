<UserControl x:Class="Hawkeye.WPF.Controls.HeaderBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hawkeye.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="1000" Background="{StaticResource BrushHeader}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" 
               Margin="30,5,0,5" 
               Source="D:\2 course\2 sem\ООП\курсач\Hawkeye\Hawkeye.WPF\Resuorces\DarkThemeLogo.png"
               HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30">
            Hawkeye
        </TextBlock>
        <Button Grid.Column="2"
                Margin="0,0,30,0" 
                HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate  TargetType="Button">
                    <Grid>
                        <Ellipse Height="45" Width="45" Fill="#ffffff"></Ellipse>
                        <Label HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                            <Label.Content>
                                <Image Source="D:\2 course\2 sem\ООП\курсач\Hawkeye\Hawkeye.WPF\Resuorces\UserIcon.png"
                                       Width="35" Height="35"/>
                            </Label.Content>
                        </Label>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
